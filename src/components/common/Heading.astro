---
const { t, class: className } = Astro.props;
---

<div
  class={`mx-2 sm:mx-4 rounded-2xl bg-gradient-to-r from-primary to-primary-hover px-4 py-4 sm:px-8 sm:py-6 relative overflow-hidden ${className || ""}`}
>
  <div class="pointer-events-none absolute inset-0 overflow-hidden">
    <div
      class="from-white/8 to-white/3 absolute -left-12 -top-12 h-40 w-40 animate-pulse rounded-full bg-gradient-to-br blur-lg"
      style="animation-duration: 4s;"
    >
    </div>
    <div
      class="from-white/6 to-white/2 absolute -bottom-16 -right-16 h-48 w-48 animate-bounce rounded-full bg-gradient-to-tl blur-xl"
      style="animation-duration: 6s;"
    >
    </div>
    <div
      class="absolute -top-20 left-1/2 h-36 w-36 animate-pulse rounded-full bg-gradient-to-b from-white/5 to-transparent blur-lg"
      style="animation-duration: 5s; animation-delay: 1s;"
    >
    </div>
    <div
      class="bg-white/6 absolute right-8 top-8 h-20 w-20 animate-ping rounded-full blur-md"
      style="animation-duration: 3s;"
    >
    </div>
    <div
      class="bg-white/8 absolute right-12 top-12 h-16 w-16 animate-pulse rounded-full"
      style="animation-duration: 2.5s;"
    >
    </div>
    <div
      class="h-18 w-18 bg-white/7 absolute bottom-8 left-8 animate-ping rounded-full blur-md"
      style="animation-duration: 4s; animation-delay: 0.5s;"
    >
    </div>
    <div
      class="bg-white/9 absolute bottom-12 left-12 h-14 w-14 animate-pulse rounded-full"
      style="animation-duration: 3s; animation-delay: 1.5s;"
    >
    </div>
    <div
      class="absolute left-1/4 top-4 h-10 w-10 animate-bounce rounded-full bg-white/5 blur-sm"
      style="animation-duration: 3.5s;"
    >
    </div>
    <div
      class="bg-white/12 absolute left-1/3 top-8 h-6 w-6 animate-pulse rounded-full"
      style="animation-duration: 2s;"
    >
    </div>
    <div
      class="bg-white/6 absolute bottom-4 right-1/3 h-12 w-12 animate-bounce rounded-full blur-sm"
      style="animation-duration: 4.5s; animation-delay: 0.8s;"
    >
    </div>
    <div
      class="absolute bottom-8 right-1/4 h-8 w-8 animate-pulse rounded-full bg-white/10"
      style="animation-duration: 2.8s; animation-delay: 0.3s;"
    >
    </div>
    <div
      class="absolute left-16 top-1/2 h-4 w-4 animate-ping rounded-full bg-white/15"
      style="animation-duration: 2.2s;"
    >
    </div>
    <div
      class="bg-white/12 absolute right-16 top-1/3 h-5 w-5 animate-pulse rounded-full"
      style="animation-duration: 3.2s; animation-delay: 0.7s;"
    >
    </div>
    <div
      class="bg-white/18 absolute bottom-3 left-1/2 h-3 w-3 animate-ping rounded-full"
      style="animation-duration: 1.8s; animation-delay: 1.2s;"
    >
    </div>
    <div
      class="absolute left-20 top-6 h-1.5 w-1.5 animate-pulse rounded-full bg-white/25"
      style="animation-duration: 1.5s;"
    >
    </div>
    <div
      class="bg-white/22 absolute right-20 top-16 h-2 w-2 animate-pulse rounded-full"
      style="animation-duration: 2.1s; animation-delay: 0.4s;"
    >
    </div>
    <div
      class="absolute left-1/2 top-1/2 h-1 w-1 animate-ping rounded-full bg-white/30"
      style="animation-duration: 1.3s; animation-delay: 0.9s;"
    >
    </div>
    <div
      class="absolute bottom-6 right-24 h-1.5 w-1.5 animate-pulse rounded-full bg-white/25"
      style="animation-duration: 1.7s; animation-delay: 0.6s;"
    >
    </div>
  </div>

  <h2
    class="scroll-animate animate-fade-up relative z-10 text-center font-prompt text-2xl font-[800] text-white sm:text-3xl"
  >
    {t}
  </h2>
</div>
