---
import Card from "../../common/card/contest/Card.astro";
import Heading from "../../common/Heading.astro";

const { t } = Astro.props;
const insightData = t.insight.insight;
---

<section id="insight" class="mx-auto flex w-full max-w-7xl flex-col gap-4 py-16">
  <div class="w-full rounded-2xl bg-gradient-to-r from-primary to-primary-hover px-8 py-6">
    <h2 class="scroll-animate animate-fade-up text-center font-prompt text-3xl font-[800] text-white">
      {t?.insight?.title}
    </h2>
  </div>
  <div class="flex flex-col gap-4 px-4">
    {
      insightData.map((c: any) => (
        <Card
          t={{
            title: c.title,
            description: c.description,
            points: c.points,
            description2: c.description2,
            image: c.image,
            location: c.location,
            alt: c.title,
            href: c.href,
          }}
        />
      ))
    }
  </div>
</section>
