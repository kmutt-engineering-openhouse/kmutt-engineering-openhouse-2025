---
import type { DepartmentCardProps } from "../../../types/card.ts";
import { Image } from "astro:assets";

export interface Props extends DepartmentCardProps {
  "data-delay"?: number;
}

const { t, "data-delay": dataDelay } = Astro.props;
---

<article
  class="scroll-animate animate-fade-up flex w-full min-w-0 flex-col overflow-hidden rounded-2xl border border-gray-300 bg-white transition-shadow duration-300 hover:shadow-lg"
  data-delay={dataDelay}
>
  <a
    href={t.href}
    class="block w-full rounded-2xl focus:outline-none"
    aria-label={`View ${t.title} department details`}
  >
    <div class="relative aspect-[2/1] w-full overflow-hidden">
      <Image
        src={t.image}
        alt=""
        class="hover:scale-103 absolute inset-0 h-full w-full object-cover transition-transform duration-300"
        width={800}
        height={400}
        loading="lazy"
        decoding="async"
        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 400px"
        quality={95}
        role="presentation"
      />
    </div>

    <header class="flex items-center gap-3 p-4 pt-3">
      <Image
        src={t.icon}
        alt={t.iconAlt ?? ""}
        width={48}
        height={48}
        class="h-6 w-6 flex-shrink-0 object-contain"
        loading="lazy"
        decoding="async"
        role="presentation"
      />
      <h3 class="font-prompt text-base font-semibold leading-tight text-gray-900">
        {t.title}
      </h3>
    </header>
  </a>
</article>
