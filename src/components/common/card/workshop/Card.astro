---
import type { WorkshopCardProps } from "../../../../types/card.ts";
import { Image } from "astro:assets";

export interface Props extends WorkshopCardProps {
  "data-delay"?: number;
}

const { src, alt, title, description, code, index, lang, "data-delay": dataDelay } = Astro.props;
const dialogId =
  index !== undefined
    ? `workshop-modal-${index}`
    : `workshop-modal-${Math.random().toString(36).substr(2, 9)}`;
---

<article
  class="scroll-animate animate-fade-up group flex flex-col overflow-hidden rounded-2xl bg-white shadow-lg transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 lg:h-full"
  data-delay={dataDelay}
>
  <a
    href={`/${lang}/workshop/${code}/`}
    class="card-button relative aspect-[3/4] w-full overflow-hidden rounded-t-2xl focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 block"
    aria-label={`View details for ${title}`}
    aria-describedby={description ? `${dialogId}-description` : undefined}
  >
    <Image
      src={src}
      alt={alt}
      class="h-full w-full object-cover transition-transform duration-500 ease-out will-change-transform group-hover:scale-110"
      sizes="(max-width: 640px) 70vw, (max-width: 768px) 50vw, (max-width: 1024px) 25vw, 400px"
      loading="lazy"
      width={600}
      height={800}
      quality={95}
      decoding="async"
    />
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    
    <!-- Content Overlay -->
    <div class="absolute inset-0 flex flex-col justify-end p-4">
      <div class="transform translate-y-2 group-hover:translate-y-0 transition-transform duration-300">
        <h2 class="text-white font-prompt text-lg font-bold mb-2 drop-shadow-lg">
          {title}
        </h2>
        <p class="text-white/90 text-sm font-jamjuree line-clamp-2 drop-shadow-md">
          {description}
        </p>
      </div>
    </div>
    
    <!-- Hover Icon -->
    <div class="absolute top-4 right-4 w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300 transform scale-75 group-hover:scale-100">
      <img src="/src/assets/icons/eye.svg" alt="View" class="w-4 h-4 text-white" />
    </div>
  </a>
</article>
