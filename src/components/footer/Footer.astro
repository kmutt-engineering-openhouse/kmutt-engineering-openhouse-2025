---
import { Image } from "astro:assets";
import OPH_Logo from "../../assets/logo/oph2025.webp";

const { t } = Astro.props;
---

<footer class="bg-gray-100 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Footer Content -->
    <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-6 mb-6">
      
      <!-- Logo Section -->
      <div class="flex-shrink-0">
        <div class="flex items-center gap-2">
          <!-- KMUTT ENG Logo -->
          <Image
            src={OPH_Logo}
            alt="KMUTT Engineering Open House 2025 Logo"
            class="select-none w-44 h-44"
            width={177}
            height={177}
            sizes="177px"
            format="webp"
            loading="eager"
            decoding="async"
            fetchpriority="high"
          />
          
          <!-- University Info with Social Icons -->
          <div class="text-gray-800">
            <!-- Social Media Icons -->
            <div class="flex items-center space-x-3 mb-2">
              <!-- Facebook -->
              <a 
                href={t.footer.social.facebook.href} 
                target="_blank" 
                rel="noopener noreferrer"
                class="w-9 h-9 bg-purple-700 rounded-full flex items-center justify-center hover:bg-purple-800 transition-colors duration-200"
                aria-label={t.footer.social.facebook.alt}
              >
                <Image
                  src={t.footer.social.facebook.icon}
                  alt={t.footer.social.facebook.alt}
                  width={16}
                  height={16}
                  class="w-4 h-4 brightness-0 invert"
                />
              </a>
              
              <!-- Instagram -->
              <a 
                href={t.footer.social.instagram.href} 
                target="_blank" 
                rel="noopener noreferrer"
                class="w-9 h-9 bg-purple-700 rounded-full flex items-center justify-center hover:bg-purple-800 transition-colors duration-200"
                aria-label={t.footer.social.instagram.alt}
              >
                <Image
                  src={t.footer.social.instagram.icon}
                  alt={t.footer.social.instagram.alt}
                  width={16}
                  height={16}
                  class="w-4 h-4 brightness-0 invert"
                />
              </a>
            </div>
            
            <!-- University Info -->
            <div class="font-prompt font-medium text-sm leading-tight mb-1">
              {t.footer.university}
            </div>
            <div class="font-prompt text-xs text-gray-600 leading-tight">
              {t.footer.address}
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Divider -->
    <div class="border-t border-gray-300 pt-4">
      <!-- Copyright -->
      <div class="text-center">
        <p class="text-xs text-gray-500 font-prompt">
          {t.footer.copyright}
        </p>
      </div>
    </div>
  </div>
</footer>
