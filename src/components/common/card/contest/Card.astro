---
import type { ContestCardProps } from "../../../../types/card.ts";
import CardContent from "./CardContent.astro";

export interface Props extends ContestCardProps {}

const { t } = Astro.props;
---

<article
  class="rounded-2xl border border-gray-300 bg-white shadow-md transition-shadow duration-300 hover:shadow-lg"
>
  {
    t?.href ? (
      <a
        href={t.href}
        target="_blank"
        rel="noopener noreferrer"
        class="block rounded-2xl focus:outline-none"
        aria-label={`View details for ${t.title} (opens in new tab)`}
      >
        <CardContent t={t} />
      </a>
    ) : (
      <div>
        <CardContent t={t} />
      </div>
    )
  }
</article>
