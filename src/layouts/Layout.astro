---
import "@/styles/global.css";
import Navbar from "@/components/common/navbar/Navbar.astro";
import Footer from "@/components/common/footer/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import type { LayoutProps } from "@/types";

interface Props extends LayoutProps {
  title?: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const {
  title = "KMUTT Engineering Open House 2025",
  description = "KMUTT Engineering Open House 2025 งานเปิดบ้านคณะวิศวกรรมศาสตร์ มหาวิทยาลัยเทคโนโลยีพระจอมเกล้าธนบุรี 10-12 ตุลาคม 2025",
  currentLang = "th",
  image = "/og-image.jpg",
  noIndex = false,
  t,
} = Astro.props;

// Generate meta description based on language
const metaDescription =
  currentLang === "en"
    ? "KMUTT Engineering Open House 2025 - October 10-12, 2025 at Faculty of Engineering, King Mongkut's University of Technology Thonburi"
    : "KMUTT Engineering Open House 2025 งานเปิดบ้านคณะวิศวกรรมศาสตร์ มหาวิทยาลัยเทคโนโลยีพระจอมเกล้าธนบุรี 10-12 ตุลาคม 2025";

const pageDescription = description || metaDescription;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);

// JSON-LD structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Event",
  name: title,
  description: pageDescription,
  startDate: "2025-10-10",
  endDate: "2025-10-12",
  eventStatus: "https://schema.org/EventScheduled",
  eventAttendanceMode: "https://schema.org/OfflineEventAttendanceMode",
  location: {
    "@type": "Place",
    name: "King Mongkut's University of Technology Thonburi",
    address: {
      "@type": "PostalAddress",
      addressLocality: "Bangkok",
      addressCountry: "TH",
    },
  },
  organizer: {
    "@type": "Organization",
    name: "KMUTT Faculty of Engineering",
    url: "https://bangmod.engineer",
  },
};
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={pageDescription} />
    <meta name="generator" content={Astro.generator} />

    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Font loading with display swap for better performance -->
    <link
      href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:wght@400;500;700&family=Prompt:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon and app icons -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="KMUTT Engineering Open House 2025" />
    <meta property="og:locale" content={currentLang === "en" ? "en_US" : "th_TH"} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={socialImage} />

    <!-- Language alternates -->
    <link rel="alternate" hreflang="th" href="https://bangmod.engineer/th/" />
    <link rel="alternate" hreflang="en" href="https://bangmod.engineer/en/" />
    <link rel="alternate" hreflang="x-default" href="https://bangmod.engineer/th/" />

    <!-- Theme color -->
    <meta name="theme-color" content="#1f2937" />

    <title>{title}</title>

    <!-- JSON-LD structured data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <ViewTransitions />
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <Navbar t={t} currentLang={currentLang} />
    <main class="flex flex-col justify-center">
      <slot />
    </main>
    <Footer t={t} />
  </body>
</html>
