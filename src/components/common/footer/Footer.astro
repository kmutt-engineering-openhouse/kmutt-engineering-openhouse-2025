---
import { Image } from "astro:assets";
import OPH_Logo from "../../../assets/logo/oph2025.webp";

const { t } = Astro.props;
---

<footer class="bg-gray-100 pb-2 pt-8 sm:pb-4">
  <div class="mx-auto max-w-7xl px-6">
    <div class="mb-6 flex flex-col items-center gap-6 lg:flex-row lg:items-center lg:gap-8">
      <Image
        src={OPH_Logo}
        alt="KMUTT Engineering Open House 2025 Logo"
        class="h-40 w-40 lg:h-44 lg:w-44"
        width={177}
        height={177}
        loading="lazy"
      />

      <div class="flex-1 space-y-4 text-center lg:text-left">
        <div class="flex justify-center gap-3 lg:justify-start">
          <a
            href={t.footer.social.facebook.href}
            target="_blank"
            rel="noopener noreferrer"
            class="h-10 w-10 transition-transform hover:scale-110"
            aria-label={t.footer.social.facebook.alt}
          >
            <Image
              src={t.footer.social.facebook.icon}
              alt={t.footer.social.facebook.alt}
              width={40}
              height={40}
              class="h-full w-full"
            />
          </a>
          <a
            href={t.footer.social.instagram.href}
            target="_blank"
            rel="noopener noreferrer"
            class="h-10 w-10 transition-transform hover:scale-110"
            aria-label={t.footer.social.instagram.alt}
          >
            <Image
              src={t.footer.social.instagram.icon}
              alt={t.footer.social.instagram.alt}
              width={40}
              height={40}
              class="h-full w-full"
            />
          </a>
        </div>

        <div class="space-y-2 text-gray-800">
          <div class="font-jamjuree font-medium">
            {t.footer.faculty}
            <br class="sm:hidden" />
            {t.footer.university}
          </div>
          <div class="text-md font-jamjuree text-gray-800">
            {t.footer.address}
          </div>
        </div>
      </div>
    </div>

    <div class="border-t border-gray-300 pt-2 sm:pt-4">
      <p class="text-center font-prompt text-[6px] text-gray-600 sm:text-xs">
        {t.footer.copyright}
      </p>
    </div>
  </div>
</footer>
