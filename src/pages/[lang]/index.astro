---
import Layout from "../../layouts/Layout.astro";
import { getDict } from "../../i18n/getDict";

export function getStaticPaths() {
  return ["th", "en"].map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = getDict(lang === "en" ? "en" : "th");
---
<Layout>
  <main class="mx-auto max-w-5xl px-4 py-10">
    <h1 class="text-3xl font-bold">{t.heroHeading}</h1>

    <nav class="mt-2 text-sm flex gap-2">
      <a
        href="/th/"
        class={`underline ${lang === "th" ? "font-bold text-blue-600" : "opacity-60"}`}
      >
        TH
      </a>
      <a
        href="/en/"
        class={`underline ${lang === "en" ? "font-bold text-blue-600" : "opacity-60"}`}
      >
        EN
      </a>
    </nav>
  </main>
</Layout>
