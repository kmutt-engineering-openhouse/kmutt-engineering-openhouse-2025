---
import Heading from "../../common/Heading.astro";
import FaqCard from "./Card.astro";

const { t } = Astro.props;
const items = Array.isArray(t?.faq?.questions) ? t.faq.questions : [];
---

<section id="faq" class="mx-auto flex w-full max-w-7xl flex-col gap-3 px-4 py-16">
  <div class="mx-4 rounded-2xl bg-gradient-to-r from-primary to-primary-hover px-8 py-6">
    <h2 class="scroll-animate animate-fade-up text-center font-prompt text-3xl font-[800] text-white">
      {t?.faq?.title ?? "Frequently Asked Questions"}
    </h2>
  </div>

  <div class="flex flex-col gap-3">
    {
      items.map((q: { question: string; answer: string }, i: number) => (
        <FaqCard question={q.question} answer={q.answer} data-delay={i + 1} />
      ))
    }
  </div>
</section>
