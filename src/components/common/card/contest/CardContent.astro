---
import { Image } from "astro:assets";

const { title, description, points, image, location, alt } = Astro.props.t;
---

<article class="w-full flex-col p-4 opacity-100">
  <div class="flex flex-col gap-2">
    <h4
      class="font-jamjuree text-primary-hover align-middle text-xl leading-6 font-bold tracking-normal"
    >
      {title}
    </h4>
    <div class="font-jamjuree align-middle text-base leading-6 font-normal tracking-normal">
      <p class="indent-4">
        {description}
      </p>
      {
        points && points.length > 0 && (
          <ul class="list-disc pl-5">
            {points.map((point: string) => (
              <li>{point}</li>
            ))}
          </ul>
        )
      }
    </div>
    <div class="flex flex-col gap-2">
      {
        location &&
          location.length > 0 &&
          location.map((loc: any) => (
            <a href={loc.href} target="_blank" class="flex gap-2">
              {loc.icon && (
                <Image
                  src={loc.icon}
                  alt="Location Icon"
                  class="h-5 w-4 select-none"
                  width={18}
                  height={18}
                  sizes="18px"
                  format="png"
                  loading="lazy"
                  decoding="async"
                />
              )}
              <span class="font-jamjuree text-sm font-medium">{loc.text}</span>
            </a>
          ))
      }
    </div>
  </div>
</article>
{
  image && (
    <Image
      src={image}
      alt={alt ?? title}
      class="aspect-[3/1] w-full rounded-b-xl object-cover select-none"
      format="png"
      sizes="(max-width: 640px) 100vw, (max-width: 1024px) 800px, 1200px, "
      loading="lazy"
      decoding="async"
    />
  )
}
