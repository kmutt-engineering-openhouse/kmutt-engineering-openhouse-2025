---
import "../styles/global.css";
import Navbar from "../components/navbar/Navbar.astro";

const { t, currentLang } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bai+Jamjuree:wght@400;500;700&family=Prompt:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <title>KMUTT Engineering Open House 2025</title>
  </head>
  <body class="antialiased">
    <Navbar t={t} currentLang={currentLang} />
    <main class="flex flex-col justify-center">
      <slot />
    </main>
  </body>
</html>
