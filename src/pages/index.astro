---
const isDev = import.meta.env.DEV;

const seoTitle = "KMUTT Engineering Open House 2025";
const seoDescription = "Join KMUTT Engineering Open House 2025 on October 10-12, 2025. Explore 10 engineering departments, workshops, exhibitions, and competitions at King Mongkut's University of Technology Thonburi (Bangmod Campus).";
const seoKeywords = "KMUTT, Engineering, Open House 2025, มจธ, คณะวิศวกรรมศาสตร์, มหาวิทยาลัยเทคโนโลยีพระจอมเกล้าธนบุรี, Workshop, Exhibition, Bangmod";
const seoImage = "https://bangmod.engineer/favicon.ico";
const canonicalURL = "https://bangmod.engineer/";
---

<!doctype html>
<html lang="th">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- Primary Meta Tags -->
    <title>{seoTitle}</title>
    <meta name="title" content={seoTitle} />
    <meta name="description" content={seoDescription} />
    <meta name="keywords" content={seoKeywords} />
    <meta name="author" content="KMUTT Engineering Faculty" />
    <meta name="robots" content={isDev ? "noindex, nofollow" : "index, follow"} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={seoDescription} />
    <meta property="og:image" content={seoImage} />
    <meta property="og:site_name" content="KMUTT Engineering Open House 2025" />
    <meta property="og:locale" content="th_TH" />
    <meta property="og:locale:alternate" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={seoTitle} />
    <meta property="twitter:description" content={seoDescription} />
    <meta property="twitter:image" content={seoImage} />
    
    <!-- Event Schema -->
    <meta name="event:start_date" content="2025-10-10" />
    <meta name="event:end_date" content="2025-10-12" />
    <meta name="geo.region" content="TH-10" />
    <meta name="geo.placename" content="Bangkok" />
    <meta name="geo.position" content="13.6518;100.4933" />
    <meta name="ICBM" content="13.6518, 100.4933" />
    
    <!-- Hreflang Tags -->
    <link rel="alternate" hreflang="th" href="https://bangmod.engineer/th/" />
    <link rel="alternate" hreflang="en" href="https://bangmod.engineer/en/" />
    <link rel="alternate" hreflang="x-default" href="https://bangmod.engineer/" />
    
    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- Language Detection Script -->
    <script is:inline>
      {
        (function () {
          var supported = ["th", "en"];
          var browserLang = (navigator.language || navigator.browserLanguage || "th").split("-")[0].toLowerCase();
          var lang = supported.indexOf(browserLang) !== -1 ? browserLang : "th";
          
          var storedLang = localStorage.getItem("preferred-language");
          if (storedLang && supported.indexOf(storedLang) !== -1) {
            lang = storedLang;
          }
          
          location.replace("/" + lang + "/");
        })();
      }
    </script>
    
    <!-- Fallback for no JavaScript -->
    <noscript>
      <meta http-equiv="refresh" content="0;url=/th/" />
    </noscript>
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Event",
        "name": "KMUTT Engineering Open House 2025",
        "alternateName": "งานเปิดบ้านคณะวิศวกรรมศาสตร์ มจธ. 2568",
        "description": "Join KMUTT Engineering Open House 2025 featuring workshops, exhibitions, department showcases, and engineering competitions.",
        "startDate": "2025-10-10",
        "endDate": "2025-10-12",
        "eventStatus": "https://schema.org/EventScheduled",
        "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
        "location": {
          "@type": "Place",
          "name": "King Mongkut's University of Technology Thonburi",
          "alternateName": "มหาวิทยาลัยเทคโนโลยีพระจอมเกล้าธนบุรี",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "126 Pracha Uthit Road, Bangmod",
            "addressLocality": "Thung Khru",
            "addressRegion": "Bangkok",
            "postalCode": "10140",
            "addressCountry": "TH"
          },
          "geo": {
            "@type": "GeoCoordinates",
            "latitude": "13.6518",
            "longitude": "100.4933"
          }
        },
        "organizer": {
          "@type": "Organization",
          "name": "Faculty of Engineering, KMUTT",
          "alternateName": "คณะวิศวกรรมศาสตร์ มจธ.",
          "url": "https://bangmod.engineer",
          "sameAs": [
            "https://www.facebook.com/100087709743668",
            "https://www.instagram.com/samovidva_bangmod"
          ]
        },
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "THB",
          "availability": "https://schema.org/InStock",
          "validFrom": "2025-01-01"
        },
        "image": "https://bangmod.engineer/favicon.ico",
        "url": "https://bangmod.engineer"
      }
    </script>
  </head>
  <body>
    
  </body>
</html>
