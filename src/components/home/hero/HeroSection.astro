---
import KMUTTLogo from "./KMUTTLogo.astro";
import AnimatedLogo from "./AnimatedLogo.astro";
import BigSponsorLogo from "./BigSponsorLogo.astro";

const { t } = Astro.props;
---

<section id="hero" class="mx-auto max-w-7xl px-4 py-8">
  <div class="flex flex-col items-center gap-4">
    <div class="flex flex-col items-center">
      <KMUTTLogo data-fade-up style="--i:0" />
      <AnimatedLogo data-fade-up style="--i:0.5" />
    </div>
    <h1 class="text-center font-prompt text-2xl font-[800] sm:text-3xl" data-fade-up style="--i:1">
      {t.hero.date}
    </h1>
    <p class="whitespace-pre-line text-center font-jamjuree text-base" data-fade-up style="--i:1.5">
      {t.hero.place}
    </p>
    <div class="flex flex-col items-center">
      <BigSponsorLogo data-fade-up style="--i:0" />
    </div>
  </div>
</section>
