---
import type { ContestCardProps } from "../../../../types/card.ts";
import { Image } from "astro:assets";

export interface Props extends ContestCardProps {}

const { t } = Astro.props;
---

<div class="flex w-full flex-col">
  <div class="flex flex-col p-4">
    <header class="flex flex-col gap-2">
      <h3 class="font-jamjuree text-xl font-bold leading-6 tracking-normal text-primary-hover">
        {t.title}
      </h3>
    </header>

    <div class="mt-3 flex flex-col gap-3">
      <div class="font-jamjuree text-sm font-normal leading-6 tracking-normal">
        <p class="whitespace-pre-line indent-4 text-gray-800">
          {t.description}
        </p>
        {
          t.points && t.points.length > 0 && (
            <ul class="mt-2 list-disc space-y-1 pl-5" role="list">
              {t.points.map((point: string) => (
                <li class="text-gray-700">{point}</li>
              ))}
            </ul>
          )
        }
        {
          t.description2 && (
            <div class="mt-4 space-y-3">
              {t.description2.split("\n\n").map(
                (paragraph: string) =>
                  paragraph.trim() && (
                    <div>
                      {paragraph.split("\n").map((line: string, index: number) => (
                        <p
                          class={`text-gray-800 ${(index === 0 && line.includes("รายละเอียดเพิ่มเติม")) || line.includes("More details") ? "mb-1 font-semibold text-primary-hover" : index === 0 && (line.includes("สิทธิพิเศษ") || line.includes("Exclusive")) ? "mb-2 font-medium text-gray-900" : "mb-1"}`}
                        >
                          {line}
                        </p>
                      ))}
                    </div>
                  )
              )}
            </div>
          )
        }
      </div>

      {
        t.location && t.location.length > 0 && (
          <nav class="flex flex-col gap-2" aria-label="Location links">
            {t.location.map((loc: any, index: number) => (
              <a
                href={loc.href}
                target="_blank"
                rel="noopener noreferrer"
                class="-m-1 flex items-center gap-2 whitespace-pre-line rounded p-1 transition-colors duration-200 hover:bg-gray-50 focus:outline-none"
                aria-label={`${loc.text} (opens in new tab)`}
              >
                {loc.icon && (
                  <Image
                    src={loc.icon}
                    alt=""
                    class="h-5 w-4 flex-shrink-0"
                    width={32}
                    height={40}
                    sizes="20px"
                    loading="lazy"
                    decoding="async"
                    role="presentation"
                  />
                )}
                <span class="font-jamjuree text-sm font-normal text-black">{loc.text}</span>
              </a>
            ))}
          </nav>
        )
      }
    </div>
  </div>

  {
    t.image && (
      <div class="relative">
        <Image
          src={t.image}
          alt={t.alt ?? `${t.title} contest image`}
          class="aspect-[8/3] w-full rounded-b-2xl object-cover"
          width={1200}
          height={450}
          sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 600px"
          loading="lazy"
          decoding="async"
          quality={95}
        />
      </div>
    )
  }
</div>
