---
const isDev = import.meta.env.DEV;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="noindex" />
    {isDev && (
      <script is:inline>
        (function(){
        const supported = ["th","en"];
        let lang = (navigator.language || "th").split("-")[0].toLowerCase();
        if (!supported.includes(lang)) lang = "th";
        location.replace("/" + lang + "/");
        })();
      </script>
    )}
  </head>
</html>
