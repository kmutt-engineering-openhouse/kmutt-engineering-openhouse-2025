---
const { t } = Astro.props;
---

<a
  href={t.nav.certificate.href}
  class="scroll-animate animate-fade-up inline-flex items-center justify-center whitespace-nowrap rounded-2xl border-0 bg-gradient-to-r from-primary to-primary-hover px-8 py-3 text-lg font-bold text-white shadow-lg transition-all duration-200 hover:scale-105 hover:opacity-90 hover:shadow-xl active:scale-95 md:py-4 md:text-xl"
  data-fade-up
  style="--i:5"
>
  {t.nav.certificate.title}
</a>