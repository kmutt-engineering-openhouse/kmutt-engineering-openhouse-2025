---
import KMUTTLogo from "./KMUTTLogo.astro";
import AnimatedLogo from "./AnimatedLogo.astro";

const { t } = Astro.props;
---

<section class="mx-auto max-w-7xl px-4 pt-16 pb-8">
  <div class="flex flex-col items-center gap-4">
    <div class="flex flex-col items-center gap-0">
      <KMUTTLogo />
      <AnimatedLogo data-fade />
    </div>

    <h1 class="font-prompt text-center text-2xl font-[800] sm:text-3xl" data-fade>
      {t.hero.date}
    </h1>
    <p class="font-prompt text-center text-base whitespace-pre-line">{t.hero.place}</p>
  </div>
</section>
